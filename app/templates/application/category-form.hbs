<div class="row">
    <div class="alert alert-info">
        <i class="icon-info-2"></i>
        This is an information notice for the template.
    </div>
    <ol id="breadcrumbs">
        <li><a href="#">Categories</a></li>
        <li class="current">New</li>
    </ol>
    <div class="eightcol">
         <div class="page-header">
            <h2 class="widget widget-header">New category</h2>
        </div>
        <form method="post" role="form" action="#">
            <div id="errors">
                <ul>
                    <li><i class="icon-cancel-circle"></i>Name can't be blank</li>
                    <li><i class="icon-cancel-circle"></i>Description can't be blank</li>
                </ul>
            </div>
            <fieldset class="widget widget-content widget-last">
                <div class="form-group">
                    <label for="category_name">Name</label>
                    <input class="form-control" id="category_name" type="text">
                </div>
                <div class="form-group">
                    <label for="category_description">Description</label>
                    <textarea class="form-control" id="category_description" rows="8"></textarea>
                </div>
                <div class="checkbox">
                    <label>
                        <input type="checkbox" id="category_visible" checked="checked">
                        Visible
                    </label>
                </div>
            </fieldset>
            <div class="form-action">
                <input class="btn btn-blue btn-large" type="submit" value="Submit">
            </div>
        </form>
    </div>
    <div class="fourcol last"></div>
</div>