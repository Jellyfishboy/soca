<div class="row">
    <div class="alert alert-info">
        <i class="icon-info-2"></i>
        This is an information notice for the template.
    </div>
    <div class="eightcol">
         <div class="page-header">
            <h2 class="widget widget-header">New country</h2>
        </div>
        <form method="post" role="form" action="#">
            <fieldset class="widget widget-content widget-last">
                <div class="form-group">
                    <label for="country_name">Name</label>
                    <input class="form-control" id="country_name" type="text">
                </div>
                <div class="form-group">
                    <label for="country_language">Language</label>
                    <input class="form-control" id="country_language" type="text"></input>
                </div>
                <div class="form-group form-last">
                    <label for="country_iso">ISO 3166-1-alpha-2</label>
                    <input class="form-control" id="country_iso" type="text"></input>
                </div>
            </fieldset>
            <div class="form-action">
                <input class="btn btn-blue btn-large" type="submit" value="Submit">
            </div>
        </form>
    </div>
    <div class="fourcol last"></div>
</div>